{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AICAGE release images metadata",
  "type": "object",
  "required": [
    "aicage-image",
    "aicage-image-base",
    "bases",
    "agent"
  ],
  "properties": {
    "aicage-image": {
      "type": "object",
      "required": [
        "version"
      ],
      "properties": {
        "version": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "aicage-image-base": {
      "type": "object",
      "required": [
        "version"
      ],
      "properties": {
        "version": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "bases": {
      "type": "object",
      "additionalProperties": {
        "type": "object"
      }
    },
    "agent": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [
          "agent_path",
          "agent_full_name",
          "agent_homepage",
          "valid_bases"
        ],
        "properties": {
          "agent_path": {
            "type": "string"
          },
          "agent_full_name": {
            "type": "string"
          },
          "agent_homepage": {
            "type": "string"
          },
          "base_exclude": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "base_distro_exclude": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "valid_bases": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
